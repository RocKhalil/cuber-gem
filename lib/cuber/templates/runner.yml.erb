apiVersion: v1
kind: Pod
metadata:
  name: <%= @options[:runner] %>
  namespace: <%= @options[:app] %>
  labels:
    app.kubernetes.io/name: <%= @options[:app] %>
    app.kubernetes.io/version: <%= @options[:release] %>
    app.kubernetes.io/managed-by: cuber
spec:
  containers:
  - name: runner-proc
    stdin: true
    tty: true
    image: <%= @options[:image] %>:<%= @options[:release] %>
    imagePullPolicy: Always
    command: <%= @options[:runner_cmd] %>
    envFrom:
    - configMapRef:
        name: env
    - secretRef:
        name: app-secrets
  imagePullSecrets:
  - name: regcred
