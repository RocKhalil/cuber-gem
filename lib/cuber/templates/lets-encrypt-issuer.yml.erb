# issuer-lets-encrypt-staging.yaml
apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: letsencrypt-production
  namespace: <%= @options[:app] %>
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: <%= @options[:certbot_email] %>
    privateKeySecretRef:
      name: letsencrypt-production
    solvers:
      - http01:
          ingress:
            name: web-ingress
